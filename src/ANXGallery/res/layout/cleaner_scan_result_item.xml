            <TextView android:textSize="@dimen/cleaner_item_size_text" android:textColor="@color/cleaner_item_size_text" android:id="@id/size" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <include layout="@layout/cleaner_scan_result_image_layout" />
    </LinearLayout>
    <View android:background="@color/card_divider_stroke" android:layout_width="fill_parent" android:layout_height="1.0px" />
    <TextView android:textSize="@dimen/cleaner_item_action_text" android:textColor="@color/cleaner_item_action_text" android:gravity="center" android:id="@id/action" android:background="@drawable/custom_list_item_background" android:layout_width="fill_parent" android:layout_height="@dimen/cleaner_item_action_layout_height" />
    <View android:id="@id/divider" android:background="@color/card_divider_stroke" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="1.0px" />
</LinearLayout>