<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:background="@drawable/window_background" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:id="@id/top_panel" android:paddingBottom="@dimen/cleaner_item_content_layout_padding" android:layout_width="fill_parent" android:layout_height="wrap_content" android:paddingStart="@dimen/cleaner_item_content_layout_padding" android:paddingEnd="@dimen/cleaner_item_content_layout_padding">
        <RelativeLayout android:id="@id/content_layout" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/cleaner_item_title_text" android:textStyle="bold" android:textColor="@color/cleaner_item_title_text" android:id="@id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/cleaner_item_title_margin_top" />
            <TextView android:textSize="@dimen/cleaner_item_title_text" android:textStyle="bold" android:textColor="@color/cleaner_item_title_text" android:id="@id/count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignBaseline="@id/title" android:drawableStart="@drawable/info_divider" android:layout_toEndOf="@id/title" />
